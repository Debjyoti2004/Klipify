// s3 cors policy

[
    {
        "AllowedOrigins": [
            "*" // Pass a specific URL only; allowing everything is not a good practice.
        ],
        "AllowedMethods": [
            "GET",
            "PUT",
            "POST",
            "HEAD"
        ],
        "AllowedHeaders": [
            "*"
        ],
        "ExposeHeaders": [
            "ETag"
        ],
        "MaxAgeSeconds": 3000
    }
]






